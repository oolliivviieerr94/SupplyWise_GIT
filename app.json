{
  "expo": {
    "name": "SupplyWise",
    "slug": "supplywise",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "android": {
      "package": "com.oolliivv.supplywise",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["android.permission.CAMERA"]
    },
    "ios": {
      "supportsTablet": true
    },
    "plugins": [
      "expo-router",
      [
        "expo-barcode-scanner",
        {
          "cameraPermission": "Permettre à SupplyWise d'utiliser la caméra pour scanner les codes-barres."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "web": {
      "favicon": "./assets/images/Logo_Bolt.png"
    }
  }
}
